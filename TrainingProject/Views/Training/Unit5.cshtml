
@{
    ViewBag.Title = "Unit5";
}

@{
    List<TrainingProject.Models.Person> people = ViewBag.People;
}

<h2>Manage Person Coins</h2>

<script src="~/Scripts/Training.js" type="text/javascript"></script>

<form name="myForm" id="myForm">
    <h2>People</h2>
    @for (int i = 0; i < people.Count; i++)
    {
        <div>
            <input id="person_@people[i].PersonID" type="radio" name="radPerson" onchange="personChanged()" value="@people[i].PersonID" />&nbsp;<label for="person_@people[i].PersonID">@people[i].FirstName @people[i].LastName</label>
        </div>
    }

    <h2>Coins for <span id="personName"></span></h2>

    <span id="selectedPerson"></span>

</form>
