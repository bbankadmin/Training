@model TrainingProject.Models.PersonModel

@{
    ViewBag.Title = "Unit1";
}

<h2>Unit1</h2>

@Model.FirstName @Model.LastName @Model.PhoneNumber @Model.Email
<br />
Your age is @ViewBag.Age

<form name="personForm" action="/Training/Register" method="post">

    First name: <input type="text" name="firstName" />
    <br />
    Last name: <input type="text" name="lastName" />
    <br />
    Phone number: <input type="text" name="phoneNumber" />
    <br />
    Email: <input type="text" name="email" />
    <br/>
    Birth Date: <input type="text" name="birthDate" />
    <br />
    <button type="submit">Send Info</button>

</form>