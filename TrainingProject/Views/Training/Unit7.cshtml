
@{
    ViewBag.Title = "Unit7";
}

<h2>Games People Own</h2>
@{
    List<TrainingProject.Models.Friend> friends = ViewBag.Friends;
}

<script src="~/Scripts/Training3.js?ts=12" type="text/javascript"></script>

<style>

    .tblGame {
        width: 600px;
    }

    .tblGame th {
        padding: 10px;
        font-size: 16px;
        font-weight: bold;

        background: #1e1287;
        color: white;
    }

    .tblGame td {
        padding: 10px;
    }

</style>

<form name="myForm" id="myForm">
    <h2>Friends</h2>

    <select id="selFriend" onchange="//friendChanged('dropdown')">
        @for (int i = 0; i < friends.Count; i++)
        {
            <option value="@friends[i].UserID">@friends[i].UserName</option>
        }
    </select>
    <button id="btnSelectFriend" type="button" onclick="friendChanged('dropdown')">Go</button>


    @for (int i = 0; i < friends.Count; i++)
    {
        <div>
            <input id="friend_@friends[i].UserID" type="radio" name="radFriend" onchange="friendChanged('radio')" value="@friends[i].UserID" />&nbsp;<label for="friend_@friends[i].UserID">@friends[i].UserName</label>
        </div>
    }

    <h2>Games owned by <span id="userName"></span></h2>

    <span id="selectedFriend"></span>

 

</form>



 